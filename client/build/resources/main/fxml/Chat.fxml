               <font>
                  <Font name="Noto Sans Regular" size="32.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="14.0" layoutY="106.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
               <font>
                  <Font name="Noto Sans Regular" size="20.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="14.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Address">
               <font>
                  <Font name="Noto Sans Regular" size="20.0" />
               </font>
            </Text>
            <TextField fx:id="inputContactAddress" layoutX="106.0" layoutY="125.0" prefHeight="25.0" prefWidth="333.0" />
            <Button fx:id="bttnAddContactCreate" layoutX="16.0" layoutY="222.0" mnemonicParsing="false" prefHeight="58.0" prefWidth="143.0" text="Add" />
